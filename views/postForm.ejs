<div class="container border border-secondary" id="addPost">
  <div class="row">
    <div class="col-sm">
      <img src="images/Lifesavers - Hand.png" id="addPostimg">
    </div>
    <div class="col-sm">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-outline-secondary modal_button" data-toggle="modal" data-target="#exampleModalLong">
        Add post
      </button>
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Add Post</h5>
              <button type="button" class="close modal_close_button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <!--form to add post -->
              <form action="/v1/createPost" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="heading">Blog Heading</label>
                  <input type="text" class="form-control" id="heading" aria-describedby="emailHelp" placeholder="Enter Heading" name="heading" required >
                  <small id="emailHelp" class="form-text text-muted">Give precise and easy to understand heading here</small>
                </div>
                <div class="form-group">
                  <label for="blogcontent">Content</label>
                  <textarea type="text" class="form-control" id="blogcontent" aria-describedby="emailHelp" placeholder="What do you want to talk about ?" rows="3" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="file">Add images</label>
                    <input type="file" class="form-control" id="file" name="image" required>
                    <small id="emailHelp" class="form-text text-muted">Give relevant supporting image here.</small>
                  </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary modal_close_button" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
              </form>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>